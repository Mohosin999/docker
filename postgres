version: "3.8"

services:
  demo-postgres:
    image: postgres:18
    environment:
      POSTGRES_USER: admin
      POSTGRES_PASSWORD: password
      POSTGRES_DB: postgres
    ports:
      - "5432:5432"
    volumes:
      - demo-postgres-data:/var/lib/postgresql
    networks:
      - demo-network

  demo-pgadmin:
    image: dpage/pgadmin4
    environment:
      PGADMIN_DEFAULT_EMAIL: admin@example.com
      PGADMIN_DEFAULT_PASSWORD: password
    ports:
      - "5050:80"
    networks:
      - demo-network
    depends_on:
      - demo-postgres

networks:
  demo-network:
    driver: bridge

volumes:
  demo-postgres-data:
